<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->
	<servlet>
      <servlet-name>editor</servlet-name>
      <servlet-class>auction.EditorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>editor</servlet-name>
      <url-pattern>/editor</url-pattern>
    </servlet-mapping><servlet>
  	  <servlet-name>bid</servlet-name>
  	  <servlet-class>auction.BidServlet</servlet-class>
    </servlet>
    <servlet-mapping>
  	  <servlet-name>bid</servlet-name>
  	  <url-pattern>/bid</url-pattern>
    </servlet-mapping>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>auction.loginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>
			auction.server.GreetingServiceImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/auctioneditor/greet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>sign</servlet-name>
		<servlet-class>auction.LoggedInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>sign</servlet-name>
		<url-pattern>/sign</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>../enterItem.jsp</welcome-file>
	</welcome-file-list>

</web-app>
